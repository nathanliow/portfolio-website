---
import SidebarTitle from './SidebarTitle.astro';
import SidebarMenu from '../components/SidebarMenu.astro';
import SidebarFooter from '../components/SidebarFooter.astro';

const { sidebarActive } = Astro.props;
---
<div class="drawer-side">
    <label for="sidebar-toggle" class="drawer-overlay"></label>
    <aside id="sidebar" class="sidebar">
        <div class="sidebar-title">
            <SidebarTitle/>
        </div>
        <SidebarMenu sidebarActive={sidebarActive} />
        <SidebarFooter />
    </aside>
</div>

<style>
    .drawer-side {
        z-index: 10;
        @media (max-width: 1024px) {
            height: 100%;
        }
    }
    .sidebar {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: auto;
        min-height: 100%;
        background-color: #1C1E25;
        width: 350px;
    }
    .sidebar-title {
        padding-top: 60px;
    }
</style>