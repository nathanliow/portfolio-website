---
import Sidebar from '../components/Sidebar.astro';
import Header from '../components/Header.astro';

const { title, includeSidebar = true, sidebarActive } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="background">
		<div class="drawer lg:drawer-open">
			<input id="sidebar-toggle" type="checkbox" class="drawer-toggle"/>
			<div class="drawer-content background">
				<Header/>
				<div class="flex background">
					<div class="gradient-rectangle"></div>
					<div class="main-content">
						<main class="">
							<slot />
						</main>
					</div>
				</div>
			</div>
		  	{includeSidebar && <Sidebar sidebarActive={sidebarActive} />}
		</div>
	  </body>
</html>

<style is:global>
	.background {
		background-color: #15171E;
		min-height: 100vh;
	}
	.main-content {
		background-color: #15171E;
		display: flex;
		justify-content: center;
		padding-left: 50px;
		padding-right: 50px;
		padding-top: 100px;
		min-width: 485px;

		@media (max-width: 1024px) {
			padding-top: 50px;
        }
	}
	.gradient-rectangle {
		display: flex;
		width: 5px; 
		min-height: 100%;
		height: auto;
		border-radius: 20px;
		margin-top: 100px;
		margin-bottom: 100px;
		margin-left: 100px;
		background: linear-gradient(to bottom, #00BCF0, #5781D1 50%,#9E51B8);
		transition: all 0.2s ease-in-out;
    
		@media (max-width: 1224px) {
			width: 0px; 
			height: 0px;
			margin-left: 0px;
        }
	}
</style>
