---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import { Icon } from 'astro-icon/components'

// Get projects for the projects section
const allProjects = await getCollection("projects");
const recentProjects = allProjects.sort((a, b) => 
  new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
).slice(0, 99); // Get 99 most recent projects
---
<BaseLayout title="Nathan Liow" sidebarActive="about-me">
    <div class="hero">
        <Image
            src="/about-me/profile.png"
            width="400"
            height="200"
            format="png"
            alt="Portrait Picture"
            class="hero-image"
        />
        <div class="hero-text">
            <div class="hero-intro">
                Hey, I'm Nathan Liow!
            </div>
            <br/>
            I'm currently studying
            Computer Science at The University of Texas at Austin.
            <br/>
            <br/>
            I'm interested in full stack software development, blockchain technology, 
            artificial intelligence, machine learning, and cryptocurrencies.
            <br/>
            <br/>
            Email: nathanliow7456@gmail.com
            <br/>
            <a target="_blank" href="/about-me/techresume.pdf" download="Technical Resume">Technical Resume</a>
        </div>
    </div>
    <br/>
    <div class="divider"></div>

    <!-- Projects Section -->
    <section id="projects" class="projects-section">
        <h2 class="section-title">My Projects</h2>
        <div class="project-cards">
            {recentProjects.map(project => (
                <div class="project-card">
                    <div class="card-image-container">
                        <img src={project.data.heroImage} alt={project.data.title} class="card-image">
                    </div>
                    <a href={`/projects/${project.slug}`} class="card-content">
                        <h3 class="card-title">{project.data.title}</h3>
                        <p class="card-description">{project.data.description}</p>
                    </a>
                </div>
            ))}
        </div>
    </section>
</BaseLayout>

<style is:global>
    h1 {
        font-size: 30px;
        font-weight: bold;
    }
    h2 {
        font-size: 24px;
        font-weight: bold;
    }
    h3 {
        font-size: 40px;
        font-weight: bold;
    }
    p {
        padding-top: 10px;
        padding-bottom: 10px;
    }
    a {
        color: #6f5b3e;
        transition: all 0.15s ease-in-out;
    }
    a:hover {
        color: #c4ae78;
    }
    table {
        width: 100%;
    }
    .caption {
        color: #b5b5b5;
        font-size: 12px;
        font-weight: light;
    }

    /* Smooth scrolling for anchor links */
    html {
        scroll-behavior: smooth;
    }
</style>

<style>
	.title {
		margin-bottom: 15px;
	}
	.title-text {
		color: #6f5b3e;
		font-size: 30px;
		width: 100%;
		font-weight: bold;
	}
    .hero {
        display: flex;
        gap: 20px;

        @media (max-width: 700px) {
            flex-direction: column;
        }
    }
    .hero-image {
        border-radius: 20px;
        width: 50%;
        max-width: 400px;
    }
    .hero-intro {
        text-align: center;
        color: #6f5b3e;
		font-size: 24px;
		width: 100%;
        font-weight: bolder;
    }
    .hero-text {
        text-align: center;
        color: #6f5b3e;
		font-size: 16px;
		width: 100%;
        padding-bottom: 20px;
    }
	.content-text {
        font-size: 16px;
        font-family: 'DM Sans Variable', sans-serif;
        color: #6f5b3e;
	}
	.divider {
		margin-top: 25px;
		margin-bottom: 25px;
	}
	.divider-divider-color:before {
		--tw-bg-opacity: 1;
		border-top-left-radius: 20px;
		border-bottom-left-radius: 20px;
	}
	.divider-divider-color:after {
		--tw-bg-opacity: 1;
		border-top-right-radius: 20px;
		border-bottom-right-radius: 20px;
	}
    
    /* Projects Section Styles */
    .projects-section {
        margin-top: 50px;
        margin-bottom: 50px;
    }
    .section-title {
        font-size: 30px;
        margin-bottom: 30px;
        color: #6f5b3e;
    }
    .project-cards {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }
    .project-card {
        display: flex;
        background-color: #F9F6F0;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;

        @media (max-width: 768px) {
            flex-direction: column;
        }
    }
    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }
    .card-image-container {
        flex: 0 0 150px;
        overflow: hidden;

        @media (max-width: 768px) {
            flex: 0 0 auto;
            height: 150px;
        }
    }
    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .card-content {
        flex: 1;
        padding: 20px;
        display: flex;
        flex-direction: column;
    }
    .card-title {
        font-size: 24px;
        margin: 0 0 10px 0;
        color: #6f5b3e;
    }
    .card-description {
        flex: 1;
        color: #6f5b3e;
        margin-bottom: 15px;
        line-height: 1.5;
    }
</style>
