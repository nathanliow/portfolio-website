---
import SidebarTitle from './SidebarTitle.astro';
import SidebarMenu from '../components/SidebarMenu.astro';
import SidebarFooter from '../components/SidebarFooter.astro';

const { sidebarActive } = Astro.props;
---
<div class="drawer-side">
    <label for="sidebar-toggle" class="drawer-overlay"></label>
    <aside id="sidebar" class="sidebar">
        <div class="sidebar-title">
            <SidebarTitle/>
        </div>
        <div class="sidebar-menu">
            <SidebarMenu sidebarActive={sidebarActive} />
        </div>
        <div class="sidebar-footer">
            <SidebarFooter />
        </div>
    </aside>
</div>

<style>
    .sidebar {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: auto;
        min-height: 100%;
        background-color: #1C1E25;
        width: 450px;
    }
    .sidebar-title {
        margin-top: 20px;
        margin-bottom: 110px;
    }
    .sidebar-menu {
        margin-bottom: 200px;
    }
</style>