---
import SidebarMenuSelect from "./SidebarMenuSelect.astro";
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-red-900";
---

<ul class="sidebar-menu">
    <SidebarMenuSelect id="about-me" href="/" icon="person" selection="About Me"/>
    <SidebarMenuSelect id="projects" href="/" icon="terminal" selection="Projects"/>
    <SidebarMenuSelect id="blogs" href="/" icon="pen" selection="Blogs"/>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
    const activeItemElem = document.getElementById(sideBarActiveItemID);
    activeItemElem && activeItemElem.classList.add(activeClass);
</script>

<style>
    .sidebar-menu {

    }
</style>