---
import SidebarMenuSelect from "./SidebarMenuSelect.astro";
const { sidebarActive } = Astro.props;
---

<ul class="sidebar-menu">
    <SidebarMenuSelect id="about-me" href="/" icon="person" selection="About Me" sidebarActive={sidebarActive}/>
    <SidebarMenuSelect id="projects" href="/" icon="terminal" selection="Projects" sidebarActive={sidebarActive}/>
    <SidebarMenuSelect id="blogs" href="/" icon="pen" selection="Blogs" sidebarActive={sidebarActive}/>
</ul>

<style>
    .sidebar-menu {
        padding-top: 50px;
        flex-grow: 1;
        flex-shrink: 1;
        overflow-y: auto;
    }
</style>