---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContentBox from '../components/ContentBox.astro';

// project hero images
import PortfolioWebsitePic from '/public/projects/portfolio-website.png';
import youmecarPic from '/public/projects/youmecar.png';
import manimPic from '/public/projects/manim.png';
import physicsCalc from '/public/projects/physics-calc.png';
import hangman from '/public/projects/hangman.png';
import terminalRPG from '/public/projects/terminal-rpg.png';
---

<BaseLayout title="Projects" sidebarActive="projects">
	<div>
		<div class="text-3xl w-full font-bold mb-5">My Latest Projects</div>
	</div>

	<ContentBox
	  title="Portfolio Website"
	  img={PortfolioWebsitePic}
	  desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
	  url="#"
	  tags={["Astro", "HTML", "CSS"]}
	  badgeTag="NEW"
	/>
	<div class="divider"></div>
	<ContentBox
	  title="youmecar"
	  img={youmecarPic}
	  desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
	  url="#"
	  tags={["Python", "React", "Firebase"]}
	  badgeTag="NEW"
	/>
	<div class="divider"></div>
	<ContentBox
	  title="Manim Animation"
	  img={manimPic}
	  desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
	  url="#"
	  tags={["Python", "Manim", "Animation"]}
	  badgeTag=""
	/>
	<div class="divider"></div>
	<ContentBox
	  title="Physics Calculator Website"
	  img={physicsCalc}
	  desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
	  url="#"
	  tags={["Python", "HTML", "CSS"]}
	  badgeTag=""
	/>
	<div class="divider"></div>
	<ContentBox
	  title="Evil Hangman"
	  img={hangman}
	  desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
	  url="#"
	  tags={["Java"]}
	  badgeTag=""
	/>
	<div class="divider"></div>
	<ContentBox
	  title="Codecademy Terminal RPG"
	  img={terminalRPG}
	  desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
	  url="#"
	  tags={["Python"]}
	  badgeTag=""
	/>
